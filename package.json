{
  "name": "@tinijs/parcel-reporter-copy-public",
  "version": "0.0.1",
  "description": "A ParcelJS reporter for copying the public folder.",
  "author": "Lam Nhan",
  "homepage": "https://lamnhan.com",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "main": "src/index.js",
  "source": "src/index.js",
  "types": "src/index.d.ts",
  "files": [
    "src",
    "!**/*.ts",
    "**/*.d.ts"
  ],
  "engines": {
    "node": ">= 12.0.0",
    "parcel": "^2.8.2"
  },
  "scripts": {
    "compile": "tsc",
    "build": "npm run compile",
    "deploy": "npm run build && npm publish",
    "docs": "ayedocs generate",
    "test": "npm run compile && nyc --cache false mocha test/**/*.js",
    "coverage": "nyc --cache false report --reporter=text-lcov | coveralls",
    "lint": "gts lint",
    "fix": "gts fix"
  },
  "keywords": [
    "node",
    "module",
    "parceljs",
    "tinijs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/tinijs/parcel-reporter-copy-public.git"
  },
  "bugs": {
    "url": "https://github.com/tinijs/parcel-reporter-copy-public/issues"
  },
  "dependencies": {
    "@parcel/plugin": "2.8.2",
    "@parcel/types": "^2.8.2"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/mocha": "^8.0.3",
    "@types/node": "^14.11.8",
    "chai": "^4.2.0",
    "coveralls": "^3.1.0",
    "gts": "^3.0.1",
    "mocha": "^8.1.3",
    "nyc": "^15.1.0",
    "typescript": "^4.0.3"
  }
}
